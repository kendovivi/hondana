<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <PreferenceCategory
        android:key="pref_shelf_settings"
        android:title="本棚表示設定" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_shelf_style"
            android:summary="アプリ終了する前に本棚スタイルを保存しますか"
            android:title="本棚表示スタイル" />

        <EditTextPreference
            android:defaultValue="4"
            android:dialogTitle="個数設定"
            android:key="pref_shelf_contents_in_row"
            android:summary="4個"
            android:title="本棚各行のコンテンツ数" />
    </PreferenceCategory>

</PreferenceScreen>